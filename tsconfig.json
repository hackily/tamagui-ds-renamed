{
  "compilerOptions": {
    "target": "es2021",
    "lib": ["dom", "dom.iterable", "esnext"],
    "types": ["node", "jest", "@testing-library/jest-dom"],
    "allowJs": false,
    "skipLibCheck": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": "src"
  },
  "typeAcquisition": {
    "enable": true
  },
  "include": [
    "core",
    "tests",
    "__tests__",
    "__fixtures__",
    "./testSetup.ts",
    "./decs.d.ts",
    "./.eslintrc.js",
    "./jest.config.js",
    "./jest.setup.js",
    "./vite.config.ts"
  ]
}
